<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title %>
  </title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.14/dist/sweetalert2.all.min.js"></script>

  <style>
    body.dark-mode {
      background-color: #121212;
      color: #ffffff;
    }

    body.dark-mode .card {
      background-color: #1e1e1e;
      border: 1px solid #333;
    }

    body.dark-mode .text-muted {
      color: #cccccc !important;
    }

    .card:hover {
      transform: scale(1.02);
      transition: 0.3s ease-in-out;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    h3.category-title {
      border-bottom: 2px solid #007bff;
      padding-bottom: 6px;
      margin-bottom: 20px;
      font-weight: bold;
      color: #007bff;
    }

    .order-btn {
      font-size: 1.2rem;
      padding: 0.75rem 2rem;
      box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
    }
  </style>
</head>

<body>
  <%- include('navbar.ejs') %>

    <div class="container mt-5">
      <h1 class="mb-4 text-center fw-bold text-primary">เลือกเมนูอาหาร</h1>

      <!-- แยกเมนูตามหมวดหมู่ -->
      <% const groupedMenus=menus.reduce((acc, menu)=> {
        if (!acc[menu.category]) acc[menu.category] = [];
        acc[menu.category].push(menu);
        return acc;
        }, {});
        const categoryOrder = ['อาหารเรียกน้ำย่อย', 'อาหารจานหลัก', 'เครื่องเคียง', 'อาหารหวาน', 'เครื่องดื่ม'];
        %>

        <form action="/submit-order" method="POST" onsubmit="return validateOrder()">
          <% categoryOrder.forEach(category=> { %>
            <% if (groupedMenus[category]) { %>
              <h3 class="category-title mt-5">
                <%= category %>
              </h3>
              <div class="row row-cols-1 row-cols-md-3 g-4">
                <% groupedMenus[category].forEach(menu=> { %>
                  <div class="col">
                    <div class="card h-100 rounded-4 shadow-sm">
                      <img src="/images/menus/<%= menu.image %>" class="card-img-top rounded-top-4"
                        alt="<%= menu.name %>" style="height: 200px; object-fit: cover;" />
                      <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-semibold">
                          <%= menu.name %>
                        </h5>
                        <p class="card-text text-success fw-bold">ราคา: <%= menu.price %> บาท</p>
                        <p class="text-muted">
                          <%= menu.description %>
                        </p>
                        <div class="input-group mt-auto">
                          <input type="hidden" name="menuIds" value="<%= menu._id %>">
                          <input type="number" name="quantities" class="form-control" value="0" min="0">
                          <span class="input-group-text">ชิ้น</span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% }) %>
              </div>
              <% } %>
                <% }) %>

                  <div class="text-center my-5">
                    <button type="submit" class="btn btn-primary order-btn rounded-pill">
                      <i class="fas fa-check-circle me-2"></i> ยืนยันการสั่งซื้อ
                    </button>
                  </div>
        </form>
        <% if (menus.length===0) { %>
          <p class="text-center">ไม่มีเมนูให้แสดง</p>
          <% } %>
    </div>

    <!-- JS: ตรวจสอบว่าผู้ใช้เลือกเมนูอย่างน้อย 1 รายการ -->
    <script>
      function validateOrder() {
        const quantities = document.getElementsByName('quantities');
        let isAnySelected = false;

        for (let i = 0; i < quantities.length; i++) {
          if (parseInt(quantities[i].value) > 0) {
            isAnySelected = true;
            break;
          }
        }

        if (!isAnySelected) {
          Swal.fire({
            icon: 'warning',
            title: 'กรุณาเลือกอย่างน้อย 1 รายการ',
            showConfirmButton: true
          });
          return false;
        }
        return true;
      }
    </script>
</body>

</html>